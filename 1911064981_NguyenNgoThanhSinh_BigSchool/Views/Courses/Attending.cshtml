@using System.Web.Razor.Parser.SyntaxTree
@using _1911064981_NguyenNgoThanhSinh_BigSchool.Models
@using Microsoft.AspNet.Identity

@model _1911064981_NguyenNgoThanhSinh_BigSchool.ViewModels.CoursesViewModel
@{
    ViewBag.Title = "My Courses";
}

<h2>My Courses</h2>
<div class="row">
    <ul class="course">
        @foreach (var course in Model.UpcommingCourses)
        {
            <li>
                <div class="date">
                    <div class="month">
                        @course.DateTime.ToString("MM")
                    </div>
                    <div class="day">
                        @course.DateTime.ToString("dd")
                    </div>
                </div>
                <div class="details">
                    <span class="lecturer">
                        @course.Lecturer.Name
                        @if(course.IsCanceled)
                           {
                                <span class="label label-warning">Canceled</span>
                           }
                        @if (Model.ShowAction && !course.IsCanceled)
                        {

                                        <button class="btn btn-link btn-sm js-toggle-follow" data-user-id="@course.LecturerId">
                                            Follow
                                        </button>
                            
                        }


                    </span>
                    <div class="category">
                        @course.Category.Name
                        

                    </div>

                </div>
            </li>

        }
    </ul>
</div>

